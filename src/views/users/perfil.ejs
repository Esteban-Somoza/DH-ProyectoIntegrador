                            <i class="fa-solid fa-user-pen"></i>
                            <a href="/users/userEdit">Edici√≥n de usuario</a>
                        </p>

                         <p id="btn-danger">
                                <i class="fa-solid fa-trash"></i>
                                <a href="/users/deleteConfirm" id="btn-danger">Eliminar usuario</a>
                        </p>

                    </section>
                </article>
                <% } %>

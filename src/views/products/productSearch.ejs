                    <h3>Marcas</h3>
                    <ul>
                        <label for="roca" class="buscador__categoria">Roca</label>
                        <input type="radio" name="categorias" id="roca" class="buscador__categoriaRadio">
                        <label for="fv" class="buscador__categoria">Fv</label>
                        <input type="radio" name="categorias" id="fv" class="buscador__categoriaRadio">
                        <label for="capea" class="buscador__categoria">Capea</label>
                        <input type="radio" name="categorias" id="capea" class="buscador__categoriaRadio">
                        <label for="rotoplast" class="buscador__categoria">Rotoplast</label>
                        <input type="radio" name="categorias" id="rotoplast" class="buscador__categoriaRadio">

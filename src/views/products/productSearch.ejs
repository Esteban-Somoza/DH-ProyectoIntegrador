                        <label for="cocina" class="buscador__categoria">Cocina</label>
                        <input type="radio" name="categorias" id="cocina" class="buscador__categoriaRadio">
                        <ul class="buscador__list">
                            <input type="radio" name="subcategoria" id="c1" class="buscador__tipo"></input>
                            <label for="c1">Bachas</label>
                            <input type="radio" name="subcategoria" id="c2" class="buscador__tipo"></input>
                            <label for="c2">Hornos</label>
                            <input type="radio" name="subcategoria" id="c3" class="buscador__tipo"></input>
                            <label for="c3">Griferia</label>
                            <input type="radio" name="subcategoria" id="c4" class="buscador__tipo"></input>
                        </ul>

                        <label for="tanques" class="buscador__categoria">Tanques</label>
                        <input type="radio" name="categorias" id="tanques" class="buscador__categoriaRadio">
                        <ul class="buscador__list">
                            <input type="radio" value="Termotanques" name="subcategoria" id="t1"
                                class="buscador__tipo"></input>
                            <label for="t1">Termotanques</label>
                            <input type="radio" name="subcategoria" id="t2" class="buscador__tipo"></input>
                            <label for="t2">Tanques de Agua</label>
                        </ul>

                        <label for="calefaccion" class="buscador__categoria">Calefaccion</label>
                        <input type="radio" name="categorias" id="calefaccion" class="buscador__categoriaRadio">
                        <ul class="buscador__list">
                            <input type="radio" name="subcategoria" id="ca1" class="buscador__tipo"></input>
                            <label for="ca1">Salamandra</label>
                            <input type="radio" name="subcategoria" id="ca2" class="buscador__tipo"></input>
                            <label for="ca2">Caloventores</label>
                            <input type="radio" name="subcategoria" id="ca3" class="buscador__tipo"></input>
                            <label for="ca3">Aires Acondicionados</label>

                            <input type="radio" name="subcategoria" id="i1" class="buscador__tipo"></input>
                            <label for="i1">Tubos</label>
                            <input type="radio" name="subcategoria" id="i2" class="buscador__tipo"></input>
                            <label for="i2">Cintas</label>
                            <input type="radio" name="subcategoria" id="i3" class="buscador__tipo"></input>

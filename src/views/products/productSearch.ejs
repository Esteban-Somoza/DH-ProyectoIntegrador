                        <h6 class="texto">productos - baño - griferia -</h6>
                        <h6 class="ruta__texto ruta__texto--resaltado"> H3 Urbano</h6>
                    </div>
                    <section class="productos">
                        <% products.forEach(element=> { %>
                            <article class="productos__elemento">
                                <h3><%= element.name %> </h3>
                                <div class="productos__informacion">
                                    <picture class="imagen"><img src="<%= element.imagen %>" alt=""></picture>
                                    <div class="productos__texto">
                                        <h4 class="descripcion">
                                            <%= element.details.description %>
                                        </h4>
                                        <a href="/products/<%= element.id %> " class="productos__modelos"> ver</a>
                                    </div>
                                </div>
                            </article>
                            <% }) %>

                        <!-- producto -->
                        <h2 class="titulo">Producto</h2>
                        <label for="nombre-producto">Nombres del producto</label>
                        <input class="formulario_relleno" type="text" name="nombreProducto" min="1"
                            value="<%= product.name%>">
                        <label class="infodenombres" for="imagenProducto">Imagen del producto</label>
                        <input class="formulario_relleno" type="file" name="imagenProducto" value="">
                        <label for="description">Descripcion</label>
                        <textarea class="descripcion" type="textarea"
                            name="description"><%= product.details.description %></textarea>
                        <label for="price">Precio</label>
                        <input class="formulario_relleno" type="text" name="price" id="price" min="1"
                            value="<%= product.price%>">

                        <!-- informacion -->
                        <h2 class="titulo">Información</h2>
                        <label for="tecnologia">Tecnologia</label>
                        <input class="formulario_relleno" type="text" name="tecnologia" id="subCategoria" min="1"
                            value="<%= product.information.tecnologia%>">

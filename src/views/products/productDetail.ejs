<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../includes/head.ejs') %>
    <script  defer src="../../scripts/menu.js"></script>
</head>

<body>
    <%- include ('../includes/header.ejs') %>
        <!-- break  -->
        <main>
          <!--    <div id="ruta">
                <h6 class="texto">productos - baño - griferia -</h6>
                <h6 class="ruta__texto ruta__texto--resaltado">
                   // 
                </h6> -->
            </div>
            <section id="producto">
                <picture id="producto__imagen">
                    <img src="/images/productos/<%= producto.imagen.nombre%> " alt="">
                </picture>
                <article id="producto__informacion">
                    <h2 id="producto__titulo">
                        <%= producto.nombre %>
                    </h2>
                    <ul id="producto__tabla">
                        <!-- generador -->
                        <% for( let i=0; i < informacion.length; i++ ) { let item=informacion[i]
                        if(informacion[i] == "id"){ continue }
                        if(producto.informacion[item] == "" || producto.informacion[item] == null ){ continue } %>
                            <li class="producto__tablaItem">
                                <h3 class="producto__itemsTabla">
                                    <%= informacion[i] %>
                                </h3>
                                <h3 class="producto__infoTabla">
                                    <%= producto.informacion[item] %>
                                </h3>
                            </li>
                            <% } %>
                    </ul>
                    <div id="producto__compra">
                        <h5>Valor Final:</h5>
                        <h3> $ <%= producto.precio %>
                        </h3>
                        
                    </div>
                    <% if (user && user.isAdmin){ %>
                        
                    <a href="/products/productDelete/<%= producto.id %> "><i  id= "basura" class="fa-solid fa-trash basura"></i></a>
                    <a href="/products/edit/<%= producto.id %> "><i id="edit" class="fa-solid fa-pen-to-square edit"></i> </a>
                    <% } %>
                </article>
            </section>
            <section id="detalles">
                <h3>Descripción del producto</h3>
                <ul id="detalles__navegacion">
                </ul>
                <article id="detalles__infoDetalle">
                    <div><%= producto.descripcion %></div>
                    <picture class="imagen">
                        <img src="<%= producto.detalles %> " alt="">
                    </picture>
                </article>
            </section>
        </main>
        <!-- break -->

        <%- include ('../includes/footer.ejs') %>

       

</html>